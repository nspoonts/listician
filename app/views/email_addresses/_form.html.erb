<%= form_for(@email_address) do |f| %>
  <% if notice %>
    <div id="notice"><p id="notice"><%= notice %></p></div>
  <% elsif @email_address.errors.any? %>
    <div id="error_explanation">
      <% @email_address.errors.full_messages.each do |msg| %>
        <ul><%= msg %></ul>
      <% end %>
    </div>
  <% end %>
  <div class="row collapse">
  	<div class="field small-12 columns">
  		<%= f.label :email, "Sign up for our beta <span>and be the first to try it</span>".html_safe %>
	    <div class="small-9 columns">
	      <%= f.text_field :email, :placeholder => "Email Address" %>
	    </div>
	    <div class="small-3 columns">
	      <%= f.submit "Sign up", class: "button postfix radius" %>
	    </div>
   </div>
  </div>
<% end %>
